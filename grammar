Statement :=
    | ID "=" Expression
    | Expression
    ;

Expression :=
    | Term ( ( "+" | "-" ) Term )*
    ;

Term := 
    | Primary ( ( "*" | "/" ) Primary )*;
    ;

Primary :=
    | Factor ( "^" Primary)*
    ;

Factor :=
    | NUMBER
    | ID
    | ( "-" | "+" ) Factor
    | "|" Expression "|"
    | "(" Expression ")"
    ;
